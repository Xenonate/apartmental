
<form name="search" action="/searches" method="post" style="inline">

<label>City</label>
<select name="search[search_city]" class: "form-control">
  <option value="San Francisco">San Francisco</option>
  <option value="New York City">New York City</option>
  <option value="Melbourne">Melbourne</option>
  <option value="Beijing">Beijing</option>
</select>

<label>Price</label>
<input type="text" name="search[search_min_price]" placeholder="min" class: "form-control" required><br>
<input type="text" name="search[search_max_price]" placeholder="max" class: "form-control" required><br>

<label>Bedroom</label>
 <select name="search[search_bedroom]" class: "form-control">
  <option value="Studio">Studio</option>
  <option value="1">1</option>
  <option value="2">2</option>
  <option value="3">3</option>
  <option value="4">4</option>
  <option value="5">5+</option>
</select>

<label>Length of stay</label>
 <select name="search[search_period]" class: "form-control">
  <option value="1">1 year</option>
  <option value="2">2 years</option>
  <option value="3">3 years</option>
  <option value="4">4 years</option>
  <option value="5">5+ years</option>
</select>

<label>Address</label>
<input type="text" name="search[search_address]" placeholder="Where do you work?" class: "form-control"><br>

<label>Mode</label>
 <select name="search[search_mode]" class: "form-control">
  <option value="transit">Public transit</option>
  <option value="bike">Bike</option>
  <option value="drive">Drive</option>
  <option value="walk">Walk</option>
</select>

<label>Travel time</label>
<input type="text" name="search[search_min_time]" placeholder="min" class: "form-control" required><br>
<input type="text" name="search[search_max_time]" placeholder="max" class: "form-control" required><br>
